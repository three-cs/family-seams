{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "standard",
        "plugin:jest/all",
        "plugin:jest-formatting/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "jest/no-hooks": "warn"
    },
    "plugins": [
        "jest",
        "jest-formatting",
        "react"
    ],
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  }
}
